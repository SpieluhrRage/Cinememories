<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF4ED">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/openWeb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:backgroundTint="#5A8A63"
            android:textColor="#FFFFFF"
            android:text="Открыть каталог фильмов" />

        <Button
            android:id="@+id/playMusic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:backgroundTint="#4C6793"
            android:textColor="#FFFFFF"
            android:text="Играть саундтрек" />

        <Button
            android:id="@+id/animate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:backgroundTint="#8E5A83"
            android:textColor="#FFFFFF"
            android:text="Анимация постера" />

        <Button
            android:id="@+id/notifyNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:backgroundTint="#BA5A4F"
            android:textColor="#FFFFFF"
            android:text="Напомнить сейчас" />

        <Button
            android:id="@+id/notifyLater"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:backgroundTint="#D69B2E"
            android:textColor="#FFFFFF"
            android:text="Напомнить позже" />

        <TextView
            android:id="@+id/animateTarget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Фильм дня: Интерстеллар"
            android:textSize="20sp"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:padding="12dp"
            android:background="@drawable/text_border" />
    </LinearLayout>
</ScrollView>
