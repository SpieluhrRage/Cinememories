<?xml version="1.0" encoding="utf-8"?>
<!-- activity_add_movie.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <EditText
        android:id="@+id/movieTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="40dp"
        android:hint="@string/movieName" />

    <EditText
        android:id="@+id/movieYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/movieTitle"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:hint="@string/year" />

    <EditText
        android:id="@+id/movieGenre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/movieYear"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="16dp"
        android:hint="@string/genre" />

    <Button
        android:id="@+id/saveMovieButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/movieGenre"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="16dp"
        android:text="@string/saveFilm"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/saveMovieButton"
        android:layout_marginTop="14dp"
        android:text="@string/back" />
</RelativeLayout>